<div class="announcements-list">
  <h1>お知らせ一覧</h1>

  <%= link_to '新規投稿', new_announcement_path, class: 'btn new-post-btn' %> <!-- 新規投稿ボタン -->

  <% @announcements.each do |announcement| %>
    <div class="announcement-item">
      <h2><%= link_to announcement.title, announcement_path(announcement) %></h2>
      <p>投稿日: <%= l(announcement.created_at, format: :short) %></p>
    </div>
  <% end %>
</div>
