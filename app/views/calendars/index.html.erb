<!DOCTYPE html>
<html>
<head>
  <title>カレンダー</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'calendars', media: 'all' %>
</head>
<body>
  

  <div class="main-content">
    <div class="calendar-container">
      <h1><%= "#{@current_date.year}年 #{@current_date.month}月" %>のカレンダー</h1>
      <table class="calendar">
        <thead>
          <tr>
            <% %w[日 月 火 水 木 金 土].each do |day| %>
              <th><%= day %></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @calendars.each_slice(7).to_a.each do |week| %>
            <tr>
              <% week.each do |date| %>
                <td class="<%= 'weekend' if date.saturday? || date.sunday? %> <%= 'today' if date.to_date == Date.today %>">
                  <%= date.day %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="footer">
    <!-- フッターの内容 -->
  </div>
</body>
</html>
