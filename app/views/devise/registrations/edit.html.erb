<div class="register-container">
  <h2>新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :name, "名前" %><br />
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :telephone, "電話番号" %><br />
      <%= f.telephone_field :telephone, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :birthday, "誕生日" %><br />
      <%= f.date_field :birthday, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "パスワード（確認）" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :role_id, "役割" %><br />
      <%= f.select :role_id, Role.all.map { |role| [role.name, role.id] }, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "登録", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="login-link">
    <p>既にアカウントをお持ちですか？</p>
    <%= link_to 'ログインはこちら', new_user_session_path %>
  </div>
</div>
