<%= form_with(model: event, local: true) do |form| %>
  <!-- 既存のフォーム要素 -->
  
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  
  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>
  
  <div class="field">
    <%= form.label :attendance_status %>
    <%= form.text_area :attendance_status %>
  </div>
  
  <!-- 既存のフォーム要素 -->
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>