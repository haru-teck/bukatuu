<div class="container">
  <h1>お知らせの新規作成</h1>
  <%= form_with model: @announcement, local: true, html: { multipart: true } do |form| %>
    <div class="form-group">
      <%= form.label :title, '件名' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :explanation, '内容' %>
      <%= form.text_area :explanation, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.label :images, '画像' %>
      <%= form.file_field :images, class: 'form-control', multiple: true %>
    </div>
    <%= form.submit '作成', class: 'btn sports-btn' %>
  <% end %>
</div>
